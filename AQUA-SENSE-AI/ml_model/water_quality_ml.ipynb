import os
import sys
import pandas as pd

def load_data(csv_path):
    """
    Load CSV file into a pandas DataFrame and print basic inspection info.
    Args:
        csv_path (str): Path to the water_quality.csv file
    Returns:
        pd.DataFrame: Loaded dataframe
    """
    # 1) Check path exists and is a file
    if not os.path.isfile(csv_path):
        # Helpful error message for beginners
        print(f"ERROR: File not found at: {csv_path}")
        print("Make sure you run this script from the repository root, or provide the correct path.")
        print("Expected repository structure:\nAQUA-SENSE-AI/\n├── data/water_quality.csv\n├── ml_model/water_quality_ml.py\n...")
        sys.exit(1)

    # 2) Read CSV into DataFrame
    try:
        df = pd.read_csv(csv_path)
    except Exception as e:
        # Simple error explanation and suggestion
        print("ERROR: Failed to read CSV. Exception message:")
        print(e)
        print("Possible fixes: check file encoding, ensure it's a valid CSV, or open it in a text editor to inspect.")
        sys.exit(1)

    # 3) Basic inspections to understand the data
    print("\n=== Data Loaded Successfully ===")
    print(f"File: {csv_path}")
    print(f"Number of rows, columns: {df.shape}\n")

    # Print first 5 rows so you can see the columns and sample values
    print("----- First 5 rows -----")
    print(df.head(), "\n")

    # Print column names so we know which columns correspond to pH, TDS (or Solids), Turbidity
    print("----- Columns -----")
    print(list(df.columns), "\n")

    # Print simple summary statistics (numerical columns)
    print("----- Summary statistics (numeric columns) -----")
    print(df.describe().transpose(), "\n")

    # Print info: types and non-null counts (helps find missing data)
    print("----- DataFrame info -----")
    print(df.info(), "\n")

    return df

if __name__ == "__main__":
    # Default path relative to this file: ../data/water_quality.csv
    # When running from repo root: python ml_model/water_quality_ml.py
    default_path = os.path.join("data", "water_quality.csv")
    df = load_data(default_path)

